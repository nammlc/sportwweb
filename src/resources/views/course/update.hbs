<div class="mt-4" style="color: aliceblue;">
    <h3> Sửa bài viết</h3>
    <div id="form-create">
        <form action="/c1/{{c1._id}}?_method=PUT" method="post">

            <div class="form-group">
                <label for="phara1">Mô tả</label>
                <textarea type="text"  name="phara1" id="phara1" class="form-control">{{c1.phara1}}</textarea>
                <h1 id ="errorphara1"></h1>
            </div>

            <div class="form-group">
                <label for="name">Tên</label>
                <input type="text" value = "{{c1.name}}" name="name" id="name" class="form-control">
                <h1 id ="errorname"></h1>
            </div>

            <div class="form-group">
                <label for="summary">summary</label>
                <input type="text" value = "{{c1.summary}}" name="summary" id="summary" class="form-control">
                <h1 id ="errorsummary"></h1>
            </div>

            <div class="form-group">
                <label for="img1">Ảnh</label>
                <input type="text" value = "{{c1.img1}}" name="img1" id="img1" class="form-control">
                <h1 id ="errorimg1"></h1>
            </div>

            <button type="submit" class="btn btn-primary" id="check-submit">Lưu chỉnh sửa</button>
            <h1 id="errorsubmit"></h1>
        </form>
    </div>
</div>